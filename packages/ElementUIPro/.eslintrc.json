{
  "root": true,
  "env": {
    "node": false
  },
  "extends": [
    // 开启 vue 插件并使用推荐规则
    "plugin:vue/recommended",
    // 启用eslint推荐规则
    "eslint:recommended",
    // 使 ESLint 不与 Prettier 规则冲突
    "prettier",
    // 开启 Prettier 插件并使用推荐规则
    "plugin:prettier/recommended"
  ],
  "plugins": [
    // 添加 vue 插件
    "vue",
    // 添加 Prettier 插件
    "prettier",
    "@typescript-eslint"
  ],
  "rules": {
    "no-console": "warn",
    "no-debugger": "warn",
    "no-unused-vars": "error"
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": {
          "js": "espree",
          "ts": "@typescript-eslint/parser",
          "<template>": "espree"
        },
        "sourceType": "module"
      }
    }
  ]
}
